datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")  // <- em dev jÃ¡ pode ser file:./prisma/dev.db
}


generator client {
  provider = "prisma-client-js"
}

model Receipt {
  id            String   @id @default(cuid())
  title         String
  amountCents   Int
  currency      String   @default("BRL")
  occurredAt    DateTime
  sourceFile    String
  rawText       String
  ocrEngine     String
  ocrConfidence Float?
  category      String?  // ðŸ‘ˆ novo (opcional)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

